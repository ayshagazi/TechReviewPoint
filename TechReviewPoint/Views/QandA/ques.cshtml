@using TechReviewPoint.Models
@model TechReviewPoint.Models.Question

@{
    ViewBag.Title = "ques";
    //Layout = "~/Views/Shared/ProductDetailsLayout.cshtml";
}

<h2>ques</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h4>Question</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <form class="row g-3">
        <div class="col-lg-12">
            <h5>Write About Your Problem</h5>

            @Html.EditorFor(model => model.Problem, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Problem, "", new { @class = "text-danger" })

        </div>

        <div class="col-12">
            <input type="submit" value="Post" class="btn btn-success" />
        </div>
    </form>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


@foreach (var item in ViewData["QUE"] as IEnumerable<Question>)
{

    <div class="card my-4">
        <h5 class="card-header">
            @item.User.UserName

        </h5>
        <div class="card-body">
            <h5 class="card-title">
                @item.Problem
            </h5>
            <p class="card-text">
                @item.QuestionDate
            </p>
            <p class="btn btn-info">
                @Html.ActionLink("View Details", "ans", new { id = item.QuestionID })
            </p>
        </div>
    </div>

}