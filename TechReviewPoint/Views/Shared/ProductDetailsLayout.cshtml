@model TechReviewPoint.Models.Product

@{
    Layout = "_Layout.cshtml";
}

<div class="container body-content">

    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://source.unsplash.com/1400x600/?phone" class="card-img-top" alt="...">
            </div>

            <div class="carousel-item">
                <img src="https://source.unsplash.com/1400x600/?phone" class="card-img-top" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://source.unsplash.com/1400x600/?phone" class="card-img-top" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>


    <dd>
        <h1 style="text-align:center">
            @Html.DisplayFor(model => model.ProductName)
        </h1>
    </dd>

    <nav class="nav">
        <a class="nav-link active" aria-current="page">
            @Html.ActionLink("Specification", "ProductDetails", "ProductDetails", null,
            new { @class = "btn btn-outline-dark" })
        </a>
        <a class="nav-link">
            @Html.ActionLink("Review", "ReviewsInProductDetails", "Review", null,
            new { @class = "btn btn-outline-dark" })
        </a>
        <a class="nav-link">
            @Html.ActionLink("Issue", "productIssues", "Review", null,
             new { @class = "btn btn-outline-dark" })
        </a>
    </nav>
    <div class"my-4"></div>
    @RenderBody()
</div>