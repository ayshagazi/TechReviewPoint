                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("AdminLogin","Admins")" style="font-weight:bold;">Admin</a></li>
                                <li><a href="@Url.Action("Login","Users")" style="font-weight:bold;">User</a></li>
                            </ul>
                        </li>

                    </ul>
                    -->

            <ul class="nav navbar-nav navbar-right">

                @if (Session["UserSessionEmail"] != null || Session["AdminSessionEmail"] != null)
                {
                    if (Session["UserSessionEmail"] != null)
                    {
                        <li>@Html.ActionLink("Post a Review", "Index", "Reviews")</li>

                        <li><p style="color:#fff; margin-top:15px">@Session["UserSessionEmail"]</p></li>
                        <li>@Html.ActionLink("Log Out", "UserLogout", "Users")</li>
                    }
                    else
                    {

                        <li><p style="color:#fff; margin-top:15px">@Session["AdminSessionEmail"]</p></li>
                        <li>@Html.ActionLink("Sign out", "AdminSignout", "Admins")</li>
                    }
                }

                else
                {
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-log-in"></span> Sign in / Sign Up <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("AdminLogin", "Admins")" style="font-weight:bold;">Admin</a></li>
                            <li><a href="@Url.Action("Login", "Users")" style="font-weight:bold;">Customer</a></li>
                        </ul>
                    </li>

                }
            </ul>



            </div>




        </div>
    </div>
